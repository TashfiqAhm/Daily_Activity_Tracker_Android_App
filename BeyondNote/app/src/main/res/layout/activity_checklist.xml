<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChecklistActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <android.support.v7.widget.Toolbar
        android:id="@+id/check_list_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_theme_2"
        android:elevation="40dp"
        android:layout_marginBottom="5dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/check_list_date_text_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_theme_2"
        android:elevation="40dp"
        android:gravity="center"
        android:text="12/03/19"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="change_date"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/check_list_listView_id"
            android:background="@color/background_theme_1"
            android:divider="@color/white"
            android:dividerHeight="2dp">


        </ListView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/check_list_fab_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="@color/fab_button_color"
            android:src="@drawable/fab_add_icon"
            android:tint="@color/black"
            app:elevation="40dp"
            app:backgroundTint="@color/white"/>


    </RelativeLayout>



</LinearLayout>