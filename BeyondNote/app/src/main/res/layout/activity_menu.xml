<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menu_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_theme_2"
        android:elevation="40dp"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/Base.ThemeOverlay.AppCompat.Light"
        android:layout_marginBottom="5dp"
        >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/menu_date_text_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/background_theme_2"
        android:elevation="40dp"
        android:gravity="center"
        android:text="12/03/19"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_theme_1"
        android:orientation="vertical">

        <Button
            android:id="@+id/menu_note_button_id"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="80dp"
            android:background="@color/background_theme_2"
            android:drawableLeft="@drawable/menu_notes_icon"
            android:paddingLeft="20dp"
            android:text="@string/menu_note_button_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="30dp"/>

        <Button
            android:id="@+id/menu_checklist_button_id"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:background="@color/background_theme_2"
            android:drawableLeft="@drawable/menu_checklist_icon"
            android:paddingLeft="20dp"
            android:text="@string/menu_checkList_button_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="30dp"/>

        <Button
            android:id="@+id/menu_reminder_button_id"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:background="@color/background_theme_2"
            android:drawableLeft="@drawable/menu_reminder_icon"
            android:paddingLeft="20dp"
            android:text="@string/menu_reminder_button_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="30dp"/>

        <Button
            android:id="@+id/menu_money_button_id"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_marginTop="30dp"
            android:background="@color/background_theme_2"
            android:drawableLeft="@drawable/menu_money_icon"
            android:paddingLeft="20dp"
            android:text="@string/menu_money_mangement_button_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:elevation="30dp"/>
    </LinearLayout>
</LinearLayout>